---
import HomeCard from '../components/HomeCallCenter.astro';
import Benefits from '../components/Benefits.astro';
import BranchesGrid from '../components/BranchesGrid.astro';
import BtnRequest from './BtnRequest.astro';

import img1 from '../assets/collage-1.jpg';
import img2 from '../assets/collage-2.webp';
import img3 from '../assets/collage-3.avif';

// Importar datos externos
import {
  benefitsData,
  requirementsHtml,
  branches,
  homeCards
} from '../data/homeData';
---

      <!-- Header / Archive title logic:
           En WP comprobabas is_archive/is_search/is_404... aquí puedes usar rutas o props para renderizar distintos títulos.
           Para esta versión estática no renderizo los títulos condicionales. -->
      
      <!-- Benefits + Collage -->
      <Benefits heading="Beneficios al adquirir un crédito con AlfaCredit, S.A." items={benefitsData}>
        <!-- slot: imágenes del collage (ejemplo) -->
        <div class="md:grid grid-cols-2 gap-3 w-full home-collage hidden">
          <img src={img1.src} alt="Collage 1"/>
          <img src={img2.src} alt="Collage 2"/>
          <img src={img3.src} alt="Collage 3" class="w-full h-48 col-span-2 justify-self-center"/>
        </div>
        <img src={img3.src} alt="Collage 3" class="md:hidden rounded-md"/>
      </Benefits>

      <!-- Requisitos + CTA -->
      <section class="py-4 px-2 md:px-0 bg-zinc-100" id="requisitos">
        <div class="mx-auto py-8 max-w-[600px] text-xl font-semibold">
          <h2 class="mb-4 text-2xl md:text-4xl font-black tracking-tight text-zinc-950">Requisitos para pedir un préstamo</h2>
          <div class="mt-4">
            <div class="inline-block">
              <!-- Injected HTML (puedes convertirlo a data structure si prefieres) -->
              <div set:html={requirementsHtml} />
              <div class="mt-6">
                <BtnRequest/>
              </div>
            </div>
          </div>
          
        </div>
      </section>

      <!-- Branches -->
      <BranchesGrid branches={branches} />

      <!-- Home cards (antes widget area con cards) -->
      <section class="py-12" id="contacto">
        <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
          {homeCards.map((c) => <HomeCard {...c} />)}
        </div>
      </section>
