---
// src/components/Benefits.astro
export interface Props {
  heading?: string;
  items?: { title?: string; text?: string }[];
}
const { heading = '', items = [] } = Astro.props as Props;
---
<section class="px-2 sm:px-4 xl:px-0 py-12 lg:py-24" id="beneficios">
  <div class="max-w-7xl flex flex-col md:flex-row mx-auto">
    <div class="md:w-6/12">
      {heading ? <h2 class="text-2xl md:text-4xl font-black tracking-tight text-zinc-950">{heading}</h2> : null}
      <div class="mt-6 space-y-6">
        {items.map((it) => (
          <div class="md:pl-6 md:border-l-4 border-l-zinc-200">
            {it.title ? <h3 class="text-xl font-bold text-zinc-800">{it.title}</h3> : null}
            {it.text ? <p class="text-lg md:text-xl text-zinc-800">{it.text}</p> : null}
          </div>
        ))}
      </div>
    </div>

    <div class="md:w-6/12 lg:w-4/12 mx-auto">
      <slot />
      {/* Aquí puedes pasar imágenes o un collage como children */}
    </div>
  </div>
</section>
