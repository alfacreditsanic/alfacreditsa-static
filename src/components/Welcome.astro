<style>
	.logo{
		display: flex;
		flex-direction: column;
	}
	.logo img{
		margin: auto;
	}
	.logo .name{
		font-weight: bold;
		font-size: 24px;
	}
	.logo .slogan {}
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#container {
		font-family: Inter, sans-serif;
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
	}

	main {
		max-width: 700px;
		text-align: center;
	}

	.title {
		font-size: clamp(2rem, 4vw, 3rem);
		margin: 1rem 0;
		font-weight: 800;
		color: #111827;
	}

	.subtitle {
		font-size: 1.125rem;
		color: #4b5563;
		line-height: 1.6;
	}

	.highlight {
		color: #000;
		font-weight: 600;
	}

	#links {
		display: flex;
		gap: 1rem;
		margin-top: 1.5rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	a {
		text-decoration: none;
	}

	.button {
		background: #0ea5e9;
		color: white;
		padding: 0.75rem 1.25rem;
		border-radius: 10px;
		font-weight: 600;
		transition: opacity .2s;
	}

	.button:hover {
		opacity: .8;
	}

	.secondary {
		color: #111827;
		padding: 0.75rem 1rem;
		border-radius: 10px;
		background: rgba(255,255,255,0.7);
		backdrop-filter: blur(10px);
	}

	.secondary:hover {
		background: rgba(255,255,255,0.9);
	}

	@media screen and (max-width: 768px) {
		.subtitle {
			font-size: 1rem;
		}
	}
</style>
